{
    "name": "aiida-defects",
    "version": "0.1.0",
    "author": "Chiara Ricca, Conrad Johnston",
    "author_email": "chiara?@?",
    "url": "",
    "license": "MIT License",
    "description": "AiiDA plugin providing workflows for the automated calculation of accurate defect formation energies",
    "classifiers": [
        "License :: OSI Approved :: ?",
        "Programming Language :: Python",
        "Development Status :: 2 - Pre-Alpha"
    ],
    "entry_points": {
        "aiida.workflows": [
            "defects.formation_energy = aiida_defects.workflows.defect_workchain:DefectWorkChain"
        ]
    },
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core >= 1.0.0b1,<2.0.0",
        "aiida-quantumespresso >= 3.0.0,<4.0.0",
        "pymatgen",
        "six"
    ],
    "extras_require": {
        "dev_precommit": [
            "pre-commit",
            "pylint==1.9.4; python_version<'3.0'",
            "pylint==2.2.2; python_version>='3.0'",
            "yapf==0.26.0",
            "prospector==1.1.5",
            "pep8-naming==0.4.1",
            "modernize==0.7"
        
        ], 
        "docs": [
            "Sphinx", 
            "docutils", 
            "sphinx_rtd_theme"
        ],
        "testing": [
            "pytest",
            "coverage",
            "pytest-cov"
        ]
    }
}
